---
import { getAbsoluteLocaleUrl } from "astro:i18n";

type Props = {
    pathname: string;
};

const { pathname } = Astro.props;
---

<footer class="bg-slate-200">
    <nav>
        <ul
            class="flex flex-wrap justify-center items-center p-4 gap-4 text-sm text-gray-500"
        >
            <li>
                <a
                    class="hover:underline"
                    rel="alternate"
                    hreflang="en"
                    href={getAbsoluteLocaleUrl("en", pathname)}>English</a
                >
            </li>
            <li>
                <a
                    class="hover:underline"
                    rel="alternate"
                    hreflang="ru"
                    href={getAbsoluteLocaleUrl("ru", pathname)}>Русский</a
                >
            </li>
            <li>
                <a
                    class="hover:underline"
                    rel="alternate"
                    hreflang="uk"
                    href={getAbsoluteLocaleUrl("uk", pathname)}>Українська</a
                >
            </li>
        </ul>
    </nav>
</footer>
